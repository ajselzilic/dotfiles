export EDITOR=nvim
export VISUAL="$EDITOR"

alias nix-config="$EDITOR ~/.config/nix/flake.nix"

nix-rebuild() {
    sudo /run/current-system/sw/bin/darwin-rebuild switch --flake ~/.config/nix#macbookpro "$@"
}

